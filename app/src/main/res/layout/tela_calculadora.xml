<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".tela_calculadora">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor1:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtValor1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor2/Expoente:"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtValor1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtValor2"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtValor1"
        android:layout_alignEnd="@+id/txtValor1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adição"
        android:id="@+id/btnAdicao"
        android:layout_below="@+id/txtValor2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnMultiplica"
        android:layout_alignEnd="@+id/btnMultiplica" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplicação"
        android:id="@+id/btnMultiplica"
        android:layout_below="@+id/btnAdicao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divisão"
        android:id="@+id/btnDivisao"
        android:layout_below="@+id/btnSubtracao"
        android:layout_toRightOf="@+id/btnAdicao"
        android:layout_alignRight="@+id/btnSubtracao"
        android:layout_alignEnd="@+id/btnSubtracao" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtração"
        android:id="@+id/btnSubtracao"
        android:layout_above="@+id/btnMultiplica"
        android:layout_toRightOf="@+id/btnAdicao" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="√ Raiz Quadrada"
        android:id="@+id/btnRaiz"
        android:layout_below="@+id/txtValor2"
        android:layout_alignRight="@+id/txtValor2"
        android:layout_alignEnd="@+id/txtValor2"
        android:layout_toRightOf="@+id/btnSubtracao"
        android:layout_toEndOf="@+id/btnSubtracao" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potência"
        android:id="@+id/btnPotencia"
        android:layout_alignBottom="@+id/btnDivisao"
        android:layout_alignRight="@+id/btnRaiz"
        android:layout_alignEnd="@+id/btnRaiz"
        android:layout_toRightOf="@+id/btnDivisao"
        android:layout_toEndOf="@+id/btnDivisao" />

</RelativeLayout>
